<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <!-- Hardened runtime + allow 3rd-party dylibs (common for Rust/FFmpeg/sidecars) -->
    <key>com.apple.security.cs.disable-library-validation</key><true/>
    <!-- Standard hardened runtime defaults -->
    <key>com.apple.security.cs.allow-jit</key><false/>
    <key>com.apple.security.cs.allow-dyld-environment-variables</key><false/>
    <key>com.apple.security.get-task-allow</key><false/>
    <key>com.apple.security.app-sandbox</key><false/>
    <!-- Typical permissions your app likely needs -->
    <key>com.apple.security.network.client</key><true/>
    <key>com.apple.security.files.user-selected.read-write</key><true/>
  </dict>
</plist>
