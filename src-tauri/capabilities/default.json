{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        { "name": "yt-dlp" },
        { "name": "gallery-dl" },
        { "name": "binaries/yt-dlp", "sidecar": true },
        { "name": "binaries/gallery-dl", "sidecar": true }
      ]
    }
  ]
}
